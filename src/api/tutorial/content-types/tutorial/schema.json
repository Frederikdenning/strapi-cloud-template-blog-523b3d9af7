{
  "kind": "collectionType",
  "collectionName": "tutorials",
  "info": {
    "singularName": "tutorial",
    "pluralName": "tutorials",
    "displayName": "Tutorial",
    "description": "Create tutorial content"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "content": {
      "type": "dynamiczone",
      "components": ["shared.rich-text"]
    },
    "video_url": {
      "type": "string"
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "difficulty": {
      "type": "enumeration",
      "enum": ["Beginner", "Intermediate", "Advanced"],
      "required": true
    },
    "duration_minutes": {
      "type": "integer",
      "required": true
    }
  }
}
