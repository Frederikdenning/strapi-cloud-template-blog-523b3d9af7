      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "seo_description": {
      "type": "text"
    },
    "published_date": {
      "type": "date"
    },
    "category": {
      "type": "string"
    }
  }
}
